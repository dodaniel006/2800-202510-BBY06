<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js" integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="./css/main.css">
    <title>Home</title>
</head>
<body>
    <div class="card text-center text-bg-secondary m-2">
        <div class="card-body">   
            <div class="resizer">
                <iframe class="resized" src="./game/index.html" title="Iframe Example"></iframe> 
            </div>
        </div>
    </div>
  </div>
</div>

<div class="card text-center text-bg-secondary m-2 p-2">
  <!-- Create new task button -->
  <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-2">
    <button class="btn btn-primary me-md-2" type="button">
      Create New Task
    </button>
  </div>

        <!-- Create new task button -->
        <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-2">
            <button class="btn btn-primary me-md-2" type="button" onclick="window.location='/createTask'">Create New Task</button>
        </div>

        <!-- Scroll With Cards inside -->
        <div data-bs-spy="scroll" data-bs-target="#navbar-example2" data-bs-root-margin="0px 0px -40%" data-bs-smooth-scroll="true" class="scrollspy-example bg-body-tertiary p-3 rounded-2" tabindex="0" style="overflow-y: scroll; height: 300px;">
            <div class="card text-bg-dark text-start mb-2">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h1>Task Name</h1>
                            <p>Short Description</p>
                        </div>
                        <div class="col d-grid gap-2">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmationPoppup">
                                Complete Task
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card text-bg-dark text-start mb-2">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h1>Task Name</h1>
                            <p>Short Description</p>
                        </div>
                        <div class="col d-grid gap-2">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmationPoppup">
                                Complete Task
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>  
    </div>

    <!-- Modal -->
    <div class="modal fade" id="confirmationPoppup" tabindex="-1" aria-labelledby="confirmationPoppupLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="confirmationPoppupLabel">Confirmation</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Really Complete This Task?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal" id="complete">Yes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="card text-center text-bg-secondary m-2 p-2">
        <div class="row">
          <div class="col">
            <h1>Task Name</h1>
            <p>Short Description</p>
          </div>
          <div class="col d-grid gap-2">
            <button class="btn btn-primary" type="button">
              Complete Task
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- <script type="text/javascript" src="/game/html5game/data.hazel"></script> -->
    <script type="module" src="/js/home.js"></script>
</body>
</html>
